<% layout('layouts/boilerplate') %>
	<div class="row">
		<h1 class="text-center">Edit Campground</h1>
		<div class="col-6 offset-3">
			<form action="/campgrounds/<%= camp._id %>?_method=put" method="post">
				<div class="mb-3">
					<label class="form-label" for="title">Title:</label>
					<input class="form-control" type="text" name="campground[title]" id="title" placeholder="title"
						value="<%= camp.title %>">
				</div>
				<div class=" mb-3">
					<label class="form-label" for="location">Location:</label>
					<input class="form-control" type="text" name="campground[location]" id="location"
						placeholder="location" value="<%= camp.location %>">
				</div>
				<div class=" mb-3">
					<label class="form-label" for="price">Price:</label>
					<div class="input-group mb-3">
						<span class="input-group-text" id="price-label">$</span>
						<input type="text" class="form-control" aria-label="price-label" name="campground[price]"
							id="price" value="<%= camp.price %>">
					</div>
				</div>
				<div class=" mb-3">
					<label class="form-label" for="image">Image Url:</label>
					<input class="form-control" type="text" name="campground[image]" id="image" placeholder="image"
						value="<%= camp.image %>">
				</div>
				<div class="mb-3">
					<label class="form-label" for="description">Description:</label>
					<textarea class="form-control" type="text" name="campground[description]" id=description"
						placeholder="description"><%= camp.description %></textarea>
				</div>
				<button class=" btn btn-info mb-3">Update campground</button>
			</form>
			<a class="btn btn-warning" href="/campgrounds/<%= camp._id %>">Go back</a>
		</div>
	</div>