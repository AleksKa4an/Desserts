<% layout('layouts/boilerplate') %>
	<div class="row">
		<div class="col-6 offset-3 mb-3">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">
						<%= des.title %>
					</h5>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item text-muted">
						<%= des.weight %> grams
					</li>
					<li class="list-group-item">$<%= des.price %>
					</li>
					<li class="list-group-item">$<%= des.cost %>
					</li>
				</ul>
				<div class="card-body d-flex justify-content-between">
					<a href="/desserts/<%= des._id %>/edit" class="card-link btn btn-info">Edit</a>
					<form class="d-inline" action="/desserts/<%= des._id %>?_method=delete" method="post">
						<button class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</div>