<% layout('layouts/boilerplate') %>
	<div class="row">
		<div class="col-6 offset-3 mb-3">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">
						<%= prod.title %>
					</h5>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item text-muted">
						<%= prod.weight %>
					</li>
					<li class="list-group-item">$<%= prod.price %>
					</li>
					<li class="list-group-item">$<%= prod.price/prod.weight %> /gram
					</li>
				</ul>
				<div class="card-body d-flex justify-content-between">
					<a href="/products/<%= prod._id %>/edit" class="card-link btn btn-info">Edit</a>
					<form class="d-inline" action="/products/<%= prod._id %>?_method=delete" method="post">
						<button class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</div>